# Development Environment Configuration
# This file contains environment variables for development

# Node Environment
NODE_ENV=development

# Frontend URLs
NEXT_PUBLIC_WEB_APP_URL=http://localhost:3000
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3001

# Service URLs
AUTH_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:8080
ANALYTICS_SERVICE_URL=http://localhost:8081
AI_SERVICE_URL=http://localhost:8082
PDF_SERVICE_URL=http://localhost:8083

# Frontend Service URLs (for API calls)
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:8080
NEXT_PUBLIC_ANALYTICS_SERVICE_URL=http://localhost:8081
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8082
NEXT_PUBLIC_PDF_SERVICE_URL=http://localhost:8083

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/monorepo_dev
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=monorepo_dev
POSTGRES_USER=user
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys (Development)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@localhost

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
