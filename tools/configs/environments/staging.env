# Staging Environment Configuration
# This file contains environment variables for staging

# Node Environment
NODE_ENV=staging

# Frontend URLs
NEXT_PUBLIC_WEB_APP_URL=https://staging-web.yourdomain.com
NEXT_PUBLIC_ADMIN_APP_URL=https://staging-admin.yourdomain.com

# Service URLs
AUTH_SERVICE_URL=https://staging-auth.yourdomain.com
PAYMENT_SERVICE_URL=https://staging-payment.yourdomain.com
ANALYTICS_SERVICE_URL=https://staging-analytics.yourdomain.com
AI_SERVICE_URL=https://staging-ai.yourdomain.com
PDF_SERVICE_URL=https://staging-pdf.yourdomain.com

# Frontend Service URLs (for API calls)
NEXT_PUBLIC_AUTH_SERVICE_URL=https://staging-auth.yourdomain.com
NEXT_PUBLIC_PAYMENT_SERVICE_URL=https://staging-payment.yourdomain.com
NEXT_PUBLIC_ANALYTICS_SERVICE_URL=https://staging-analytics.yourdomain.com
NEXT_PUBLIC_AI_SERVICE_URL=https://staging-ai.yourdomain.com
NEXT_PUBLIC_PDF_SERVICE_URL=https://staging-pdf.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://staging_user:staging_password@staging-db.yourdomain.com:5432/monorepo_staging
POSTGRES_HOST=staging-db.yourdomain.com
POSTGRES_PORT=5432
POSTGRES_DB=monorepo_staging
POSTGRES_USER=staging_user
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://staging-redis.yourdomain.com:6379
REDIS_HOST=staging-redis.yourdomain.com
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_secure_random_string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys (Staging)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=https://staging-web.yourdomain.com,https://staging-admin.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (Staging)
SMTP_HOST=smtp.staging.yourdomain.com
SMTP_PORT=587
SMTP_USER=staging@yourdomain.com
SMTP_PASS=staging_smtp_password
EMAIL_FROM=noreply@staging.yourdomain.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
HELMET_ENABLED=true
TRUST_PROXY=true
