# Production Environment Configuration
# This file contains environment variables for production
# ⚠️  NEVER commit this file with real production values!

# Node Environment
NODE_ENV=production

# Frontend URLs
NEXT_PUBLIC_WEB_APP_URL=https://yourdomain.com
NEXT_PUBLIC_ADMIN_APP_URL=https://admin.yourdomain.com

# Service URLs
AUTH_SERVICE_URL=https://auth.yourdomain.com
PAYMENT_SERVICE_URL=https://payment.yourdomain.com
ANALYTICS_SERVICE_URL=https://analytics.yourdomain.com
AI_SERVICE_URL=https://ai.yourdomain.com
PDF_SERVICE_URL=https://pdf.yourdomain.com

# Frontend Service URLs (for API calls)
NEXT_PUBLIC_AUTH_SERVICE_URL=https://auth.yourdomain.com
NEXT_PUBLIC_PAYMENT_SERVICE_URL=https://payment.yourdomain.com
NEXT_PUBLIC_ANALYTICS_SERVICE_URL=https://analytics.yourdomain.com
NEXT_PUBLIC_AI_SERVICE_URL=https://ai.yourdomain.com
NEXT_PUBLIC_PDF_SERVICE_URL=https://pdf.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://prod_user:CHANGE_ME@prod-db.yourdomain.com:5432/monorepo_prod
POSTGRES_HOST=prod-db.yourdomain.com
POSTGRES_PORT=5432
POSTGRES_DB=monorepo_prod
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_ME

# Redis Configuration
REDIS_URL=redis://prod-redis.yourdomain.com:6379
REDIS_HOST=prod-redis.yourdomain.com
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys (Production)
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_ME
OPENAI_API_KEY=sk-CHANGE_ME

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Email Configuration (Production)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=CHANGE_ME
EMAIL_FROM=noreply@yourdomain.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
HELMET_ENABLED=true
TRUST_PROXY=true
SECURE_COOKIES=true

# Performance
ENABLE_COMPRESSION=true
CACHE_TTL=3600

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
