# Local Development Environment Variables
# Copy this file to .env.local and update the values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=monorepo_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=local-development-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# API Keys (for local testing)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key_here
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration (for local testing)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=test@localhost
SMTP_PASS=test-password
SMTP_FROM=noreply@localhost

# Service URLs
AUTH_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:8080
ANALYTICS_SERVICE_URL=http://localhost:8081
AI_SERVICE_URL=http://localhost:8082
PDF_SERVICE_URL=http://localhost:8083

# Frontend Environment Variables
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_PAYMENT_SERVICE_URL=http://localhost:8080
NEXT_PUBLIC_ANALYTICS_SERVICE_URL=http://localhost:8081
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8082
NEXT_PUBLIC_PDF_SERVICE_URL=http://localhost:8083

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
HELMET_ENABLED=false
TRUST_PROXY=false
SECURE_COOKIES=false

# Performance
ENABLE_COMPRESSION=false
CACHE_TTL=300
